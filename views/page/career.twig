{% extends layout %}
{% block title %}Career - {% endblock %}
{% block menu %}career{% endblock %}
{% block content %}
<div class="outers-middle-contents prelatife">
	<div class="ill-tops-pageinside pict-full prelatife">
		<img src="{{ app.request.baseurl }}/asset/images/ill-our-career.jpg" alt="" class="img-responsive">
		<div class="poss-full-absl top250 pageinsidetopfull-pict">
			<div class="insides-text text-center">
				<h2>CAREER</h2> <div class="clear"></div>
				<span class="hidden-xs">Take a leap forward for your career <br> with PT. Intan Chemical</span>
				<span class="visible-xs">Take a leap forward for your career with PT. Intan Chemical</span>
			</div>
		</div>
	</div>

	<section class="middle-insides-content">
		<div class="prelatife container-insides"> 
			<div class="clear height-50"></div>
			<div class="height-25"></div>
			<div class="content-text">
				<div class="row">
					<div class="col-md-12">
						<div class="text-center padding-lr5 mw740 tengah topcareer">
							<span class="c1">Intan Chemical is a fast growing company in the field of natural extracts, essential oils, flavouring & fragrances. The company has been growing  fast in the past few years and we are seeking for young, energetic, self motivated and high confident staff to join our team. If you think you got what it takes, please fill out the form below.</span>
						</div>
					</div>
				</div>
				<div class="clear height-50"></div><div class="height-15"></div>

			</div>
			<div class="clear"></div>
		</div>
		
		{# start career #}
		<div class="back-greyc outers-back-cont-career">
			<div class="clear height-50"></div><div class="height-20"></div>

			<div class="mw395 tengah text-center">
				<div class="contacts-form text-contact">
							<form method="post" action="" role="form">
							  <div class="form-group">
							    <label>Name</label>
							    <input type="text" name="Career[name]" class="form-control" >
							  </div>
							  <div class="form-group">
							    <label>Email address</label>
							    <input type="email" name="Career[email]" class="form-control" >
							  </div>

							   <div class="form-group">
							    <label>Address</label>
							    <input type="text" name="Career[address]" class="form-control" >
							  </div>

							   <div class="form-group">
							    <label>City</label>
							    <input type="text" name="Career[city]" class="form-control" >
							  </div>
							   <div class="form-group">
							    <label>Phone</label>
							    <input type="text" name="Career[phone]" class="form-control" >
							  </div>
							  <div class="form-group">
							    <label>Fax</label>
							    <input type="text" name="Career[fax]" class="form-control" >
							  </div>
							  <div class="form-group">
							    <label>Upload Your CV</label>
							    <input type="file" name="Career[cv]" class="form-control" >
							  </div>

							  <div class="form-group">
							    <label for="exampleInputEmail1">Message</label>
							    <textarea name="Career[message]" class="form-control" rows="5"></textarea>
							  </div>
							  <div class="clear height-5"></div><div class="height-2"></div>
								  <div class="form-group">
								  	<div class="col-xs-12">
								  		<div class="g-recaptcha" data-sitekey="6Lfhyf8SAAAAAEIoCVTdALU8u4mOtj0o8cGiTedX"></div>
								  	</div>
								  </div>
								  <div class="clear height-25"></div>
							  <button type="submit" class="btn btn-link btn-submit-custom"></button>
							</form>
							<div class="clear"></div>
						</div>
				<div class="clear"></div>
			</div>

			<div class="clear height-50"></div><div class="height-20"></div>
		</div>
		{# end career #}

		<div class="clear"></div>
	</section>

	<div class="clear"></div>
</div>
<script src='https://www.google.com/recaptcha/api.js'></script>
